<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="span8">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <%= link_to image_tag("cmu_ini.png", alt: "Rails"), 'http://www.ini.cmu.edu/index.html' %>
  <div class="center hero-unit">
    <!--<h1>Welcome to the Sample App</h1>-->

    <h1>CMU Making Friends</h1>
    <h2>Introduction to Software Engineer </h2>

    <%= link_to "Sign up now!", signup_path,
                                class: "btn btn-large btn-danger" %>
  </div>

  <!--
  <%= link_to image_tag("rails.png", alt: "Rails"), 'http://rubyonrails.org/' %>
  -->
<% end %>